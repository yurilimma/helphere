                    <td><%= humanized_money_with_symbol ad.price%></td>
                    <td><%= l(ad.finish_date)%></td>
                    <td>
               		<%= link_to edit_site_profile_ad_path(ad.id),class: "btn btn-primary btn-sm" do %>
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                	<% end%>
				<!--	 link_to backoffice_category_path(category), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: t('messages.confirm_with', item: category.description)}  do %>
                        <i class="fa fa-times"></i>
                     end%>	
                    </td> -->
                </tr>
                <% end%>
            </tbody>
        </table>
    </div>
</div>