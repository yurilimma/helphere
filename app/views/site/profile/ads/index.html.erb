<h1><%=t('app.service')%></h1>
<div class="panel-body">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Titulo</th>
                    <th>Categoria</th>
                    <th>Preço</th>
                    <th>Data Finalização</th>
                    <th>Opções</th>
                    
                </tr>
            </thead>
            <tbody>
            	<% @ads.each do |ad| %>
                <tr>
                    <td><%= ad.id%></td>
                    <td><%= ad.title%></td>
