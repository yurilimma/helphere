<h1>Meu Perfil</h1>
<br>
<br>
<%= content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/ads' %>
<% end%>

<% if @profile_member.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

    <ul>
        <% @ad.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>

<%= form_for(@profile_member, url: site_profile_my_datum_path(@profile_member)) do |f| %>

  
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control", placeholder: "Primeiro Nome" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone, class: "form-control", placeholder: "(ddd) 9999-9999", id: 'datadoacao' %>
          </div>
        </div>
      </div>

       <div class="row">
	    <div class="col-xs-3">
	      <div class="form-group">
	        <%= f.label :birthdate %>
	        <%= f.text_field :birthdate, class: "form-control datepicker", value: (l(@profile_member.birthdate) unless @profile_member.birthdate.blank?) %>
	      </div>
	    </div>
	</div>

      
      <%= submit_tag "#{t('buttons.send')}", class: "btn btn-primary"  %>
<% end %>

