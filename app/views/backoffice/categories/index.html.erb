<h1 class="page-header"> Categorias</h1>

<div class="panel panel-default">
<div class="panel-heading">
    Categorias
    <%= link_to new_backoffice_category_path, class:"btn btn-success btn-circle pull-right", style:"margin-top:-5px;" do %>
						<i class="fa fa-plus"></i>
    <% end%>
</div>
<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Descrição</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
            	<% @categories.each do |category| %>
                <tr>
                    <td><%= category.id%></td>
                    <td><%= category.description%></td>
                    <td style="width:100px">
                	<%= link_to edit_backoffice_category_path(category.id),class: "btn btn-primary btn-circle" do %>
						<i class="fa fa-edit"></i>
                	<% end%>
					<%= link_to backoffice_category_path(category), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: t('messages.confirm_with', item: category.description)}  do %>
                        <i class="fa fa-times"></i>
                    <% end%>	
                    </td>
                </tr>
                <% end%>
            </tbody>
        </table>
    </div>
</div>
</div>

