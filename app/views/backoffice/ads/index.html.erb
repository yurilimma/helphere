<h1 class="page-header"> Serviços</h1>

<div class="panel panel-default">
<div class="panel-heading">
    Serviços
</div>
<div class="panel-body">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Título Serviço</th>
                    <th>Prestador</th>
                    <th>Data Finalização</th>
                    <th>Preço</th>
                    <th>Classificação</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
            	<% @ads.each do |ad| %>
                <tr>
                    <td><%= ad.id%></td>
                    <td><%= ad.title%></td>
                    <td><%= ad.member.profile_member.first_name%></td>
                    <td><%= l(ad.finish_date)%></td>
                    <td><%= humanized_money_with_symbol ad.price%></td>
                    <td>
                        <center><%= number_with_precision(ad.avg_rating_dimension(ad), precision: 1) %> 
                        </center>
                    </td>
                    <td style="width:100px">
                	<%= link_to '#',class: "btn btn-primary btn-circle" do %>
						<i class="fa fa-edit"></i>
                	<% end%>
					<%= link_to '#', class:"btn btn-danger btn-circle" do %>
                        <i class="fa fa-times"></i>
                    <% end%>	
                    </td>
                </tr>
                <% end%>
            </tbody>
        </table>
        <center> <%= paginate @ads %> </center>
    </div>
</div>
</div>

